<%- include('partials/head') %>

<main>
	<div class="date-box">
		<p id="weekday"></p>
		<p id="time"></p>
	</div>

	<div class="inside">
		<p>INSIDE</p>
		<p class="big"><%= data.temperatures.inside %>°C</p>
	</div>

	<div class="humidity">
		<p>HUMIDITY</p>
		<p class="big"><%= data.humidity.value %> %</p>
	</div>

	<hr>

	<div class="outside">
		<p>OUTSIDE</p>
		<p class="big"><%= weather.main.temp %>°C</p>
		<img src="http://openweathermap.org/img/wn/<%= weather.weather[0].icon %>@2x.png"
			alt="<%= weather.weather[0].description %>">
		<p><%= weather.weather[0].main %> / <%= weather.wind.speed %>m/s <%= weather.wind.deg %>°</p>
	</div>
</main>

<%- include('partials/footer') %>